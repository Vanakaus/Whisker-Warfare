script/source = "extends TileMap


var GridSizeX = 9;
var GridSizeY = 5;
var Dict = {};
var tileSelect;




func _ready():
	
	for x in GridSizeX:
		for y in GridSizeY:
			if (x+y) % 2:
				set_cell(0, Vector2(x, y), 0, Vector2i(0, 0), 0)
			else:
				set_cell(0, Vector2(x, y), 0, Vector2i(1, 0), 0)
			
			Dict[str(Vector2(x, y))] = {
				\"used\" : \"false\"
			}



func _process(delta):
	
	if tileSelect != null && tileSelect[0] < 9  && tileSelect[1] < 5:
		if (tileSelect[0] + tileSelect[1]) % 2:
			set_cell(1, tileSelect, 0, Vector2i(0, 0), 0)
		else:
			set_cell(1, tileSelect, 0, Vector2i(1, 0), 0)
	
	tileSelect = local_to_map(get_global_mouse_position())
	
	if Dict.has(str(tileSelect)):
		set_cell(1, tileSelect, 1, Vector2i(0, 0), 0)
		$/root/Word/Label.atualizar_texto(str(Dict[str(tileSelect)][\"used\"]))
	



func _input(event):
	# Verificar se o evento é um clique de mouse
	if event is InputEventMouseButton and event.button_index == MOUSE_BUTTON_LEFT and event.is_pressed():
		var tileSelect = local_to_map(get_global_mouse_position())
		
		if Dict.has(str(tileSelect)):
			Dict[str(tileSelect)][\"used\"] = \"true\"
			$/root/Word/Cats/Test.atualizaPosicao(tileSelect)
"

